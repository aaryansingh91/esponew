<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/bannerSlider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/lotteryBox"
        android:layout_below="@id/bannerSlider"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_bg"
        android:padding="16dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Lucky Number Draw"
            android:textStyle="bold"
            android:textColor="#20275A"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="WIN â‚¹1,00,000"
            android:textStyle="bold"
            android:textColor="#FFB800"
            android:textSize="26sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Join the draw and win real money instantly"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="Play Now"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FF3D71"
            android:layout_gravity="center"
            android:paddingHorizontal="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/winnerRecyclerView"
        android:layout_below="@id/lotteryBox"
        android:layout_marginTop="16dp"
        android:layout_above="@id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:padding="12dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:tint="#000000"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_coin_24"
            android:tint="#FFB800"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:tint="#000000"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>